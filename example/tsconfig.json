{
   "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "bundler",
      "experimentalDecorators": true,
      "lib": ["ES2020"],
      "strict": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "noEmit": true,
      "resolveJsonModule": true,
      "isolatedModules": true
   },
   "include": ["./**/*.ts"],
   "exclude": ["node_modules"]
}
